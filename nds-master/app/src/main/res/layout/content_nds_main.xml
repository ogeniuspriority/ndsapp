<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?android:actionBarSize"
    android:paddingBottom="@dimen/activity_vertical_margin"

    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.ogeniuspriority.nds.nds.NDS_main"
    tools:showIn="@layout/app_bar_nds_main">

    <TextView
        android:id="@+id/upper_hello_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="16dp"
        android:text="Murakaza neza, ubu ni buryo mwashyiriweho ngo mubaze ibibazo birebana    "
        android:textColor="@color/black"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/toggle_me"
        android:layout_width="30dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@color/colorAccent"
        android:src="@drawable/next_nav" />

    <Button
        android:id="@+id/girinka"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upper_hello_text"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="2dp"

        android:text="GIRINKA"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/vup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/girinka"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="2dp"

        android:text="VUP"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:textStyle="bold" />



    <Button
        android:id="@+id/mutuelle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vup"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="2dp"

        android:text="MUTUELLE DE SANTE"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:textStyle="bold" />



    <Button
        android:id="@+id/umurenge_sacco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mutuelle"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="2dp"

        android:text="UMURENGE SACCO"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/ibibazo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/umurenge_sacco"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="2dp"

        android:text="IBIBAZO BY&apos;ABATURAGE"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:textStyle="bold" />



    <ImageView
        android:id="@+id/forum_trigger"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/ibibazo"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/ibibazo"
        android:clickable="true"
        android:src="@mipmap/forum_000"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/suggestion_trigger"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/ibibazo"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/ibibazo"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:clickable="true"
        android:src="@mipmap/box_0000"
        android:visibility="gone" />


</RelativeLayout>
