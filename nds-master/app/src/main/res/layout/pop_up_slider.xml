<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B0C4DE"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="#000000"
            android:orientation="horizontal"
            android:padding="20dp">


            <TextView
                android:id="@+id/pop_up_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Andika ikibazo kijyanye na "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#1E90FF" />
        </LinearLayout>
        <Spinner
            android:id="@+id/the_blessed_institutions"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:spinnerMode="dialog" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="#fff"
            android:orientation="horizontal"
            android:padding="20dp">


            <EditText
                android:id="@+id/ubutumwa_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="1200"
                android:layout_weight="8"
                android:gravity="left|top"
                android:hint="Andika Ubutumwa" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="#cdcdcd"
            android:orientation="horizontal"
            android:padding="2dp">

            <Button
                android:id="@+id/ubutumwa_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#000000"
                android:text="Cancel"
                android:textColor="#fff" />

            <Button
                android:id="@+id/ubutumwa_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="1dp"
                android:background="#000000"
                android:text="OK"
                android:textColor="#fff" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>